#include "LED_display.h"

void enable_RED_WEST(void){
	HAL_GPIO_WritePin(RED_WEST_GPIO_Port, RED_WEST_Pin, GPIO_PIN_RESET);
	HAL_GPIO_WritePin(YELLOW_WEST_GPIO_Port, YELLOW_WEST_Pin, GPIO_PIN_SET);
	HAL_GPIO_WritePin(GREEN_WEST_GPIO_Port, GREEN_WEST_Pin, GPIO_PIN_SET);
}

void enable_YELLOW_WEST(void){
	HAL_GPIO_WritePin(RED_WEST_GPIO_Port, RED_WEST_Pin, GPIO_PIN_RESET);
	HAL_GPIO_WritePin(YELLOW_WEST_GPIO_Port, YELLOW_WEST_Pin, GPIO_PIN_SET);
	HAL_GPIO_WritePin(GREEN_WEST_GPIO_Port, GREEN_WEST_Pin, GPIO_PIN_SET);
}
void enable_GREEN_WEST(void){
	HAL_GPIO_WritePin(RED_WEST_GPIO_Port, RED_WEST_Pin, GPIO_PIN_RESET);
	HAL_GPIO_WritePin(YELLOW_WEST_GPIO_Port, YELLOW_WEST_1_Pin, GPIO_PIN_SET);
	HAL_GPIO_WritePin(GREEN_WEST_GPIO_Port, GREEN_WEST_Pin, GPIO_PIN_SET);
}
void enable_RED_NORTH(void){
	HAL_GPIO_WritePin(RED_NORTH_GPIO_Port, RED_NORTH_Pin, GPIO_PIN_RESET);
	HAL_GPIO_WritePin(YELLOW_NORTH_GPIO_Port, YELLOW_NORTH_Pin, GPIO_PIN_SET);
	HAL_GPIO_WritePin(GREEN_NORTH_GPIO_Port, GREEN_NORTH_Pin, GPIO_PIN_SET);
}
void enable_YELLOW_NORTH(void){
	HAL_GPIO_WritePin(RED_NORTH_GPIO_Port, RED_NORTH_Pin, GPIO_PIN_RESET);
	HAL_GPIO_WritePin(YELLOW_NORTH_GPIO_Port, YELLOW_NORTH_Pin, GPIO_PIN_SET);
	HAL_GPIO_WritePin(GREEN_NORTH_GPIO_Port, GREEN_NORTH_Pin, GPIO_PIN_SET);
}
void enable_GREEN_NORTH(void){
	HAL_GPIO_WritePin(RED_NORTH_GPIO_Port, RED_NORTH_Pin, GPIO_PIN_RESET);
	HAL_GPIO_WritePin(YELLOW_NORTH_GPIO_Port, YELLOW_NORTH_Pin, GPIO_PIN_SET);
	HAL_GPIO_WritePin(GREEN_NORTH_GPIO_Port, GREEN_NORTH_Pin, GPIO_PIN_SET);
}

int enable_Term_GREEN(int value){
	if (value >= setCounterGreen) return 1;
	return 0;
}

int enable_Term_YELLOW(int value){
	if (value <= setCounterYellow) return 1;
	return 0;
}
