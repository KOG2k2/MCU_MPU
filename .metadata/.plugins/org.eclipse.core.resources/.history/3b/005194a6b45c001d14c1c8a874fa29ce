#include "fsm_auto.h"

int SEG7_buffer = 0;

void fsm_simple_buttons_run (){
	switch(AUTO){
	case INIT:
		AUTO = BLINK;
		setTimer1(100);
		break;
	case BLINK:
		if(timer1_flag == 1){
			RIDE_ON();
			SEG7_buffer = counterRED;
			counterRED--;
			if(counterRED <= INIT){
				counterRED = RED_COUNT;
				AUTO = INIT;
			}
			setTimer1(100);
		}
		break;
	default:
		break;
	}

	switch(seg_disp){
	case INIT:

	}
}
