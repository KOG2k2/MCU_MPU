#include "fsm_auto.h"

void fsm_simple_buttons_run (){
	switch(mode){
	case NORM_STATE:
		switch(LED_BLINK){
		case INIT:
			LED_BLINK = BLINK;
			setTimer1(100);
			break;
		case BLINK:
			if(timer1_flag == 1){
				TOGGLE();
				display7SEG1(counterRED);
				if(counterRED > 0) counterRED--;
				setTimer1(100);
			}
			break;
		default:
			break;
		}
		break;
	}
}
