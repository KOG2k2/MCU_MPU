#include "fsm_auto.h"

void fsm_simple_buttons_run (){
	if(timer1_flag == 1){
		TOGGLE();
		if(counterRED > 0) counterRED--;
	}
	switch(mode){
	case INIT:
		setTimer1(100);
		break;
	case NORM_MODE:
		if(timer1_flag == 1) display7SEG1(counterRED);
		break;
	case RES_STATE:
		break;
	case INC_STATE:
		break;
	case DEC_STATE:
		break;
	}
}
