#include "global.h"

int mode = MODE1;

//MODE 1
int west_traffic = INIT;
int north_traffic = INIT;
int countdown = INIT;
int mode_change = INIT;

int AUTO_RED = 5;
int AUTO_YELLOW = 2;
int AUTO_GREEN = 3;

int counterRED_WEST = AUTO_RED;
int counterGREEN_WEST = AUTO_GREEN;
int counterYELLOW_WEST = AUTO_YELLOW;

int counterRED_NORTH = AUTO_RED;
int counterGREEN_NORTH = AUTO_GREEN;
int counterYELLOW_NORTH = AUTO_YELLOW;

void Setup(){
	counterRED_WEST = AUTO_RED;
	counterGREEN_WEST = AUTO_GREEN;
	counterYELLOW_WEST = AUTO_YELLOW;

	counterRED_NORTH = AUTO_RED;
	counterGREEN_NORTH = AUTO_GREEN;
	counterYELLOW_NORTH = AUTO_YELLOW;
}

