#include "global.h"

enum LED_stat west_traffic = INIT;
enum LED_stat north_traffic = INIT;
enum SEG7 countdown = INIT;
enum MODE mode_change = INIT;

int AUTO_RED = 0;
int AUTO_YELLOW = 0;
int AUTO_GREEN = 0;

int counterRED_WEST = 0;
int counterYELLOW_WEST = 0;
int counterGREEN_WEST = 0;

int counterRED_NORTH = 0;
int counterYELLOW_NORTH = 0;
int counterGREEN_NORTH = 0;

void ledTimeInit(){
	AUTO_RED = INIT_RED;
	AUTO_GREEN = INIT_GREEN;
	AUTO_YELLOW = INIT_YELLOW;
}

void initVar(void){
	mode = MODE1;

	statusAUTO1 = INIT;
	statusAUTO2 = INIT;
	statusAUTO3 = INIT;
	statusAUTO4 = INIT;

	counterRed1 = AUTO_RED;
	counterGreen1 = AUTO_GREEN;
	counterYellow1 = AUTO_YELLOW;

	counterRed2 = AUTO_RED;
	counterGreen2 = AUTO_GREEN;
	counterYellow2 = AUTO_YELLOW;
}
