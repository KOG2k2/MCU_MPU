#include "fsm_manual.h"

void fsm_manual_run(){
	if(mode == RES_STATE){
		if(isButtonPressed(RES) == 1) counterRED = 0;
	}

	if(mode == INC_STATE){
		if(isButtonPressed(INC) == 1){
			AUTO_RED++;
			if(AUTO_RED > 9) AUTO_RED = 0;
		}
		Setup();
	}

	if(mode == DEC_STATE){
		if(isButtonPressed(DEC) == 1){
			AUTO_RED--;
			if(AUTO_RED < 0) AUTO_RED = 9;
		}
		Setup();
	}
}
