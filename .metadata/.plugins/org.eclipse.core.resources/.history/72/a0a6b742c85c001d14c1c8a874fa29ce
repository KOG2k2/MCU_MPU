#include "fsm_auto.h"

void fsm_simple_buttons_run (){
	if(timer1_flag == 1){
		TOGGLE();
		setTimer1(100);
	}

	switch(mode){
	case INIT:
		mode = NORM_STATE;
		setTimer1(10);
		setTimer2(10);
		break;
	case NORM_STATE:
		if(timer2_flag == 1){
			display7SEG1(counterRED);
			if(counterRED > 0) counterRED--;
			setTimer2(100);
		}
		if(isButtonPressed(RES) == 1) mode = RES_STATE;
		break;
	case RES_STATE:
		//counterRED = 0;
		break;
	case INC_STATE:
		break;
	case DEC_STATE:
		break;
	}
}
