#include "software_timer.h"

int LEDtimer_counter = COUNT_RESET;
int LEDtimer_flag = FLAG_OFF;

int SEG7timer_counter = COUNT_RESET;
int SEG7timer_flag = FLAG_OFF;

int LONGtimer_counter = COUNT_RESET;
int LONGtimer_flag = FLAG_OFF;

int LONG_PRESSED_INTERVALtimer_counter = COUNT_RESET;
int LONG_PRESSED_INTERVALtimer_flag = FLAG_OFF;

void setLEDTimer(int duration){
	LEDtimer_counter = duration;
	LEDtimer_flag = FLAG_OFF;
}

void setSEG7Timer(int duration){
	SEG7timer_counter = duration;
	SEG7timer_flag = FLAG_OFF;
}

void setLONGTimer(int duration){
	LONGtimer1_counter = duration;
	LONGtimer1_flag = FLAG_OFF;
}

void setLONG_PRESSED_INTERVALTimer1(int duration){
	LONG_PRESSED_INTERVALtimer1_counter = duration;
	LONG_PRESSED_INTERVALtimer1_flag = FLAG_OFF;
}

void setLONG_PRESSED_INTERVALTimer2(int duration){
	LONG_PRESSED_INTERVALtimer2_counter = duration;
	LONG_PRESSED_INTERVALtimer2_flag = FLAG_OFF;
}

void timerRun(){
	if(LEDtimer_counter > COUNT_RESET){
		LEDtimer_counter--;
		if(LEDtimer_counter == COUNT_RESET) LEDtimer_flag = FLAG_ON;
	}

	if(SEG7timer_counter > COUNT_RESET){
		SEG7timer_counter--;
		if(SEG7timer_counter == COUNT_RESET) SEG7timer_flag = FLAG_ON;
	}

	if(LONGtimer_counter > COUNT_RESET){
		LONGtimer_counter--;
		if(LONGtimer_counter == COUNT_RESET) LONGtimer_flag = FLAG_ON;
	}

	if(LONG_PRESSED_INTERVALtimer1_counter > COUNT_RESET){
		LONG_PRESSED_INTERVALtimer1_counter--;
		if(LONG_PRESSED_INTERVALtimer1_counter == COUNT_RESET) LONG_PRESSED_INTERVALtimer1_flag = FLAG_ON;
	}

	if(LONG_PRESSED_INTERVALtimer2_counter > COUNT_RESET){
		LONG_PRESSED_INTERVALtimer2_counter--;
		if(LONG_PRESSED_INTERVALtimer2_counter == COUNT_RESET) LONG_PRESSED_INTERVALtimer_flag2 = FLAG_ON;
	}
}
