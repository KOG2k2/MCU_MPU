#include "software_timer.h"

int LEDtimer_counter = COUNT_RESET;
int LEDtimer_flag = FLAG_OFF;

int timer2_counter = COUNT_RESET;
int SEG7timer_flag = FLAG_OFF;

int timer3_counter = COUNT_RESET;
int LONGtimer_flag = FLAG_OFF;

int timer4_counter = COUNT_RESET;
int LONG_PRESSED_INTERVALtimer_flag = FLAG_OFF;

void setLEDTimer(int duration){
	timer1_counter = duration;
	LEDtimer_flag = FLAG_OFF;
}

void setSEG7Timer(int duration){
	timer2_counter = duration;
	SEG7timer_flag = FLAG_OFF;
}

void setLONGTimer(int duration){
	timer3_counter = duration;
	LONGtimer_flag = FLAG_OFF;
}

void setLONG_PRESSED_INTERVALTimer(int duration){
	timer4_counter = duration;
	LONG_PRESSED_INTERVALtimer_flag = FLAG_OFF;
}

void timerRun(){
	if(timer1_counter > COUNT_RESET){
		timer1_counter--;
		if(timer1_counter == FLAG_OFF) timer1_flag = FLAG_ON;
	}

	if(timer2_counter > 0){
		timer2_counter--;
		if(timer2_counter == 0){
			timer2_flag = 1;
		}
	}

	if(timer3_counter > 0){
		timer3_counter--;
		if(timer3_counter == 0){
			timer3_flag = 1;
		}
	}

	if(timer4_counter > 0){
		timer4_counter--;
		if(timer4_counter == 0){
			timer4_flag = 1;
		}
	}
}
