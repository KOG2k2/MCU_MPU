#include "fsm_auto.h"

//int SEG7_buffer = 0;

void fsm_simple_buttons_run (){
	switch(LED_BLINK){
	case INIT:
		LED_BLINK = BLINK;
		setTimer1(100);
		break;
	case BLINK:
		if(timer1_flag == 1){
			RIDE_ON();
			display7SEG1(counterRED);
			counterRED--;
			if(counterRED <= INIT){
				counterRED = AUTO_RED;
				setTimer1(100);
			}
		}
		break;
	default:
		break;
	}
