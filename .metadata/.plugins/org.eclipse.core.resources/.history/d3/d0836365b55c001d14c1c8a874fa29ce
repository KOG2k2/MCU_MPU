#include "fsm_auto.h"

int SEG7_buffer = 0;

void ledBlink(){
	setTimer1(100);
	if(timer1_flag == 1){
		RIDE_ON();
		SEG7_buffer = counterRED;
		counterRED--;
		if(counterRED <= INIT){
			counterRED = RED_COUNT;
			setTimer1(100);
		}
	}
}
void fsm_simple_buttons_run (){

	switch(seg_disp){
	case INIT:
		seg_disp = SEG_ON;
		setTimer2(100);
		break;
	case SEG_ON:
		if(timer2_flag == 1){
			display7SEG1(SEG7_buffer);
			setTimer3(50);
		}
		break;
	}

	setTimer1(100);
}
