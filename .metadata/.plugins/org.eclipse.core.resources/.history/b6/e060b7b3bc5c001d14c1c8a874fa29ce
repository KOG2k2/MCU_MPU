#include "fsm_auto.h"

void fsm_simple_buttons_run (){
	if(mode = MODE1){
		switch(LED_BLINK){
		case INIT:
			LED_BLINK = BLINK;
			setTimer1(100);
			break;
		case BLINK:
			if(timer1_flag == 1){
				RIDE_ON();
				display7SEG1(counterRED);
				counterRED--;
				if(counterRED <= INIT) counterRED = AUTO_RED;
				setTimer1(100);
			}
			break;
		default:
			break;
		}

		switch(mode_change){
			case MODE1:
				if (isButtonPressed(RESET) == 1) mode_change = MODE2;
				if (isButtonPressed(INC) == 1) mode_change = MODE2;
				if (isButtonPressed(RESET) == 1) mode_change = MODE2;
				break;
			case MODE2:
				if (isButtonPressed(BUTTON1) == 1) mode_change = MODE3;
				break;
			case MODE3:
				if (isButtonPressed(BUTTON1) == 1) mode_change = MODE4;
				break;
			case MODE4:
				if (isButtonPressed(BUTTON1) == 1) mode_change = MODE1;
				Setup();
				break;
			default:
				break;
			}
	}
}
